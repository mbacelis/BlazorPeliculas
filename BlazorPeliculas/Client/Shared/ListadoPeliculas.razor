
@if (Peliculas == null)
{
    <img src="https://media.giphy.com/media/3oEjI6SIIHBdRxXI40/giphy.gif" />
    <text>Cargando...</text>
}
else if (Peliculas.Count == 0)
{
    <text>No hay registros para mostrar...</text>
}
else
{
    <input type="checkbox" @bind="MostrarBotones"/>

    @foreach (var pelicula in Peliculas)
    {
        <PeliculaIndividual Pelicula="pelicula" MostrarBotones="MostrarBotones" EliminarPelicula="EliminarPelicula2"/>
    }
}

@code {
    [Parameter] public List<Pelicula> Peliculas { get; set; }
    bool MostrarBotones = true;

    //Event call back
    void EliminarPelicula2(Pelicula pelicula)
    {
        Peliculas.Remove(pelicula);
        Console.WriteLine($"Se ha eliminado una pelicula {pelicula.Titutlo}");
    }
